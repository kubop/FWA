@model FWAweb.Auth.LoginModel

<div class="row">
    <div class="col-md-5">
        <div class="text-center">
            <a class="" asp-area="" asp-controller="Auth" asp-action="LoginMicrosoft">
                <img src="~/img/ms-symbollockup_signin_dark.svg" alt="Sign in with Microsoft" />
            </a>
        </div>

        <div class="text-center" style="display:flex; align-items:center;">
            <hr class="w-25 mx-auto">
            <div class="text-muted font-weight-bold">OR</div>
            <hr class="w-25 mx-auto">
        </div>

        
            <div class="card-body">
                <form asp-action="Login" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Login" class="control-label"></label>
                        <input asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="text-danger">
                        @Html.ValidationMessage("Error")
                    </div>
                    <div>
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}